<div class="container">
  <div class="row offset-6"><h3>興味のあるスキル</h3>
  </div>
  <div class="row offset-3">
    <%= @skills.each do |skill| %>
      <div class="col-2">
        <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Ruby</title><path d="<%= skill.image %>"/></svg>
        <div class="d-flex align-items-center justify-content-center">
          <%= skill.name %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row offset-6">
    <%= form_with model: @user_skill,url: user_skills_path, method: :post, local: true do |f| %>

      <div class="row">
        <!--スキルセレクトボックス仮置-->
        <div class="col-9">
         <%= f.collection_select :skill_id, @skills, :id, :name, { prompt: "-- 選択してください --" }, { class: "form-control" } %>
        </div>

        <%= f.hidden_field :user_id, :value => current_user.id %>

        <div class="col-3"><%= f.submit "追加", class: "btn btn-success btn-lg" %></div>
      </div>
    <% end %>
  </div>
</div>